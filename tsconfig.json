{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "outDir": "dist",
      "paths": {
        "@src/*": ["src/*"],
        "@test/*": ["test/*"]
      },
  
      "sourceMap": true,
      "removeComments": true,
  
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
  
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
  
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "types": ["mocha"]
    },
    "include": ["src", "test"],
    "exclude": ["node_modules", "dist", ".webpack", ".serverless"]
  }
  